<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="userConfigBean" class="com.rvr.springboot.bean.UserConfig">
        <property name="name" value="Roshan Razak"/>
        <property name="className" value="Masters"/>
    </bean>
    <bean id="userService" class="com.rvr.springboot.service.UserService">
        <constructor-arg ref="userConfigBean"/>
    </bean>
</beans>